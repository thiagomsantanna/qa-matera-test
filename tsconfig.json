{
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "baseUrl": ".",
    "paths": {
      "@catfact/*": ["services/catfacts/*"],
      "@payloads/*": ["payloads/*"],
      "@config/*": ["config/*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true
  },
  "exclude": ["node_modules"],
  "include": [
    "config/**/*.ts",
    "payloads/**/*.ts",
    "services/**/*.ts",
    "src/step-definitions/**/*.steps.ts"
  ]
}
